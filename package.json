{
  "name": "slsm",
  "description": "A smart local storage manager",
  "version": "0.12.0",
  "license": "MIT",
  "scripts": {
    "test": "vitest --ui",
    "test:run": "vitest run",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "eslint": "CI=true eslint src/ --color --max-warnings=0",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup",
    "build-test": "tsup --config tsup.test.config.ts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build"
  },
  "files": [
    "dist"
  ],
  "repository": "github:lucasols/slsm",
  "author": "Lucas Santos",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=21.5.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.9.1",
    "@lucasols/eslint-plugin-extended-lint": "^1.6.0",
    "@lucasols/utils": "^4.31.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.1",
    "@types/react": "^18.3.4",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitest/ui": "^2.0.5",
    "eslint": "^9.9.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^15.3.1",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "react": "^18.3.1",
    "tsm": "^2.3.0",
    "tsup": "^8.2.4",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "klona": "^2.0.6",
    "runcheck": "^1.3.0",
    "t-state": "^9.2.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
