{
  "name": "slsm",
  "description": "A smart local storage manager",
  "version": "1.4.0",
  "license": "MIT",
  "scripts": {
    "test": "vitest --ui",
    "test:run": "vitest run",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "eslint": "CI=true eslint src/ tests/ --color --max-warnings=0",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup",
    "build-test": "tsup --config tsup.test.config.ts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build"
  },
  "files": [
    "dist"
  ],
  "repository": "github:lucasols/slsm",
  "author": "Lucas Santos",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=21.5.0"
  },
  "devDependencies": {
    "@ls-stack/eslint-cfg": "^0.5.1",
    "@lucasols/eslint-plugin-extended-lint": "^1.6.0",
    "@lucasols/utils": "^4.31.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-vitest": "^0.5.4",
    "fflate": "^0.8.2",
    "happy-dom": "^20.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsm": "^2.3.0",
    "tsup": "^8.5.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "klona": "^2.0.6",
    "runcheck": "^1.15.0",
    "t-state": "^9.8.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  }
}
